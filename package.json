{
  "name": "growing-web-monorepo",
  "private": true,
  "description": "growing-web.",
  "version": "0.1.1",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --scope=@growing-web/**",
    "stub": "pnpm run prepack --filter ./packages -- --stub",
    "postinstall": "husky install && pnpm run stub",
    "preinstall": "npx only-allow pnpm",
    "cz": "git cz",
    "lint": "eslint .  --fix",
    "test:coverage": "c8 vitest --coverage",
    "test:watch": "vitest -w",
    "test": "vitest",
    "clean": "turbo run clean && rimraf node_modules",
    "changeset": "changeset",
    "version": "pnpm run changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "license": "UNLICENSED",
  "author": "vben",
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "c8": "^7.11.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-define-config": "^1.2.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "esno": "^0.14.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "turbo": "^1.1.3",
    "typescript": "^4.5.5",
    "unbuild": "^0.6.9",
    "vite": "^2.8.3",
    "vitest": "^0.3.6"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --ext .ts"
    ],
    "packages/**/*.d.ts": [
      "eslint --ext .ts"
    ]
  },
  "packageManager": "pnpm@6.30.0",
  "engines": {
    "node": ">=16"
  }
}
